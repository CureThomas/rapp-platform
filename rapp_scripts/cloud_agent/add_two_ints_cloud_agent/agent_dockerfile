FROM rapp/indigo-ros-rosbridge
MAINTAINER Aris Thallas aris.thallas@gmail.com
LABEL Description="This is a simple RAPP cloud agent"


ARG RAPP_HOME=/home/rapp

ARG WS_SRC_PATH=$RAPP_HOME/catkin_ws/src
ARG WS_PATH=$RAPP_HOME/catkin_ws
RUN /bin/mkdir -p $WS_SRC_PATH


WORKDIR $WS_SRC_PATH
RUN /bin/bash -c ". /opt/ros/indigo/setup.bash; catkin_init_workspace"
ADD rapp_simple_cloud_agent.tar.gz ./

WORKDIR $WS_PATH
RUN /bin/bash -c ". /opt/ros/indigo/setup.bash; catkin_make"
